package polymorphism;

import com.sun.xml.internal.ws.model.AbstractWrapperBeanGenerator.BeanMemberFactory;

public class TVUser {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

			TV tv = new SamsungTV();
			tv.powerOn();
			tv.powerOff();
			tv.volumeUp();
			tv.volumeDown();
			
			
			TV lgtv = new LgTV();
			lgtv.powerOn();
			lgtv.powerOff();
			lgtv.volumeUp();
			lgtv.volumeDown();
			
			
			BeanFactory factory = new BeanFactory();
			TV  beanTv = (TV)factory.getBean(args[0]);
			beanTv.powerOn();
			beanTv.powerOff();
			beanTv.volumeUp();
			beanTv.volumeDown();
	}

}
